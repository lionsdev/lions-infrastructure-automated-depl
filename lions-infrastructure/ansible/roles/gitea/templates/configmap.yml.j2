  # Script de v√©rification de la sant√©
  health-check.sh: |
    #!/bin/bash
    set -euo pipefail

    # Health check pour Gitea
    GITEA_URL="http://localhost:{{ gitea_port }}"

    # V√©rification de la disponibilit√© de l'API
    if curl -sf "${GITEA_URL}/api/v1/version" >/dev/null 2>&1; then
        echo "‚úÖ Gitea API est accessible"
        exit 0
    else
        echo "‚ùå Gitea API n'est pas accessible"
